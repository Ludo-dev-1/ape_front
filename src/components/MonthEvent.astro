---
const response = await fetch(`http://localhost:5000/events`);
const events = await response.json();
console.log("Events fetched:", events);
---

<!-- Événement du mois -->
<section class="bg-blue-50 py-12">
    <div class="container mx-auto px-4">
        <h2 class="text-2xl font-semibold mb-4">Événement du moment</h2>
        {
            events
                .slice(3, 4)
                .map(
                    (event: {
                        titre: string;
                        date: string;
                        description: string;
                        image: string;
                    }) => (
                        <div class="bg-white p-6 rounded-lg shadow-md">
                            <h3 class="text-xl font-semibold mb-2">
                                {event.titre}
                            </h3>
                            <p class="text-gray-600 mb-4">
                                {new Date(event.date).toLocaleDateString(
                                    "fr-FR",
                                    {
                                        year: "numeric",
                                        month: "long",
                                        day: "numeric",
                                    },
                                )}
                            </p>
                            <p class="text-gray-700 mb-4">
                                {event.description}
                            </p>
                            {event.image && (
                                <img
                                    src={event.image}
                                    alt={`Image de l'événement ${event.titre}`}
                                    class="w-full h-auto rounded-lg shadow-md"
                                />
                            )}
                        </div>
                    ),
                )
        }

        <a
            href="/evenements.html"
            class="inline-block bg-blue-600 text-white px-5 py-2 rounded hover:bg-blue-700 transition"
            >Voir tous les événements</a
        >
    </div>
</section>
